<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
	<%@ include file="../common/head.jsp" %>
    <style type="text/css">
    .tit_tab a{ width:120px !important; height:120px !important; line-height:120px; border-radius:60px !important;}
    
    </style>
	<ticket:cache group="资讯中心">
	<body class="mobile">
		<div class="mobile-view">
			<div class="mobile-page">
				<jsp:include page="../common/title.jsp">
					<jsp:param name="title" value="航班查询结果"/>
				</jsp:include>
				<div class="mobile-main">
					<div class="new_fly_ls">
						<ul class="">
							<li style='margin-bottom: 0px;'>
								<div class="fly_line clearfix">
									<span class='float-left c_black'><em class='c_black'>${setoutCity }</em><font>出发城市</font>
									</span>
									<span class='float-right c_black'><em class='c_black'>${arrivalCity }</em><font>到达城市</font>
									</span>
								</div>
								<div class="fly_time clearfix text-center">
									共搜索到 ${flightCount }条航班
								</div>
							</li>
						</ul>
					</div>
					<div class="page">
						<a href="#" class="float-left"><i class='icon-angle-left'></i>&nbsp;&nbsp;前一天</a>
						2015 / 07 / 02 周四
						<a href="#" class="float-right">后一天&nbsp;&nbsp;<i
							class='icon-angle-right'></i>
						</a>
					</div>
					<s:if test="departFromPortList != null">
						<s:iterator id="departFromPort" value="departFromPortList">
							<div class='search_fly'>
								<div class="c_content">
									<a href="#">
										<p class="text-center">
											<img src="/template/wap/images/pic/62.png" height="24" width="24">
											&nbsp;&nbsp;昆明航空&nbsp;&nbsp;
											<font class='c_black'>${departFromPort.flt }</font>
										</p>
										<div class="fly_line clearfix">
											<span class='float-left'><em class='c_black'><s:date name="#departFromPort.std " format="HH:mm"/></em><font>昆明</font>
											</span>
											<i></i>
											<span class='float-right'><em class='c_black'><s:date name="#departFromPort.sta " format="HH:mm"/></em><font>到达城市</font>
											</span>
										</div>
									</a>
									<a href="#" class="button_gz">关注</a>
								</div>
							</div>	
						</s:iterator>
					</s:if>
					<s:if test="arrivalAtPortList != null">
						<s:iterator id="arrivalAtPort" value="arrivalAtPortList">
							<div class='search_fly'>
								<div class="c_content">
									<a href="#" >
										<p class="text-center">
											<img src="/template/wap/images/pic/62.png" height="24"
												width="24">
											&nbsp;&nbsp;昆明航空&nbsp;&nbsp;
											<font class='c_black'>${arrivalAtPort.flt }</font>
										</p>
										<div class="fly_line clearfix">
											<span class='float-left'><em class='c_black'><s:date name="#arrivalAtPort.std " format="HH:mm"/></em><font>出发城市</font>
											</span>
											<i></i>
											<span class='float-right'><em class='c_black'><s:date name="#arrivalAtPort.sta " format="HH:mm"/></em><font>昆明</font>
											</span>
										</div>
									</a>
									<a href="#" class="button_gz">关注</a>
								</div>
							</div>
						</s:iterator>
					</s:if>
					<s:else>
						<div class='search_fly'>
							<div class="c_content">
								${noDataMessage }
							</div>
						</div>
					</s:else>
				</div>
				<%@ include file="../common/quickNav.jsp" %>
			</div>
		</div>
		<div class="dialog" style="display: none;">
			<%@ include file="../common/left.jsp" %>
		</div>
	</body>
	</ticket:cache>
</html>